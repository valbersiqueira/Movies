<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar" parent="AppTheme">
        <item name="actionBarStyle">@style/ActiomBar.Solid.Moveis.NoTitle</item>
    </style>

    <style name="Settings" parent="AppTheme">
    </style>

    <style name="ActiomBar.Solid.Moveis.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>

    </style>

</resources>
